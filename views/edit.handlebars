{{#with book}}
<h2>Editar o {{title}}</h2>
<form action="/editbook" method="post" class="form">
<input type="hidden" name="id" value="{{id}}">
    <div class="form-control">
        <label for="title">Titulo</label>
        <input type="text" id="title" name="title" placeholder="Digite o título" value="{{title}}">
    </div>
    <div class="form-control">
        <label for="qtpages">Quantidade de páginas</label>
        <input type="number" id="qtpages" name="qtpages" placeholder="Digite a quantidade de páginas" value="{{qtpages}}">
    </div>
    <input type="submit" value="Editar">
</form>
{{/with}}